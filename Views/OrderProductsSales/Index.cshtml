@model IEnumerable<StockManager.Models.OrderProductsSale>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center mb-4">Ordenes de Ventas</h2>


@using (Html.BeginForm("UpdateSales", "OrderProductsSales", FormMethod.Post))
{
    <table class="table table-hover">
        <tr class="text-center bg-dark">
            <th class="text-white">
                ORDEN ID
            </th>
            <th class="text-white">
                CANTIDAD
            </th>
            <th class="text-white">
                PRECIO UNITARIO
            </th>
            <th class="text-white">
                PRODUCTO
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.OrderProductsSaleID })" class="btn btn-outline-secondary">&#9999</a>
                    <a href="@Url.Action("Details", new { id = item.OrderProductsSaleID })" class="btn btn-outline-info text-white">&#128269</a>
                    <a href="@Url.Action("Delete", new { id = item.OrderProductsSaleID })" class="btn btn-outline-danger">&#10060</a>
                    <input type="checkbox" name="orderProductIds" value="@item.OrderProductsSaleID" />
                </td>
            </tr>
        }

    </table>
    <p>
        <a href="@Url.Action("Create")" class="btn btn-success">Crear</a>
    </p>

    <div>
        <label for="purchaseId">Sale ID:</label>
        @Html.TextBox("saleID", null, new { @class = "form-control" })
    </div>
    <input type="submit" value="UpdateSales" class="btn btn-success" />
}