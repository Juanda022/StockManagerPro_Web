@model IEnumerable<StockManager.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center mb-4">Productos</h2>


<table class="table table-hover">
    <tr class="text-center bg-dark">
        <th class="text-white">
            PRODUCTO
        </th>
        <th class="text-white">
            DESCRIPCIÓN
        </th>
        <th class="text-white">
            PRECIO
        </th>
        <th class="text-white">
            CANTIDAD
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.ProductID })" class="btn btn-outline-secondary">&#9999</a>
                <a href="@Url.Action("Details", new { id = item.ProductID })" class="btn btn-outline-info text-white">&#128269</a>
                <a href="@Url.Action("Delete", new { id = item.ProductID })" class="btn btn-outline-danger">&#10060</a>
            </td>
        </tr>
    }

</table>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Crear</a>
</p>

@using (Html.BeginForm("GraphicViewParameter", "Graphics", FormMethod.Post))
{
    <hr/>
    <div class="mb-4 border-1">
        <div>
            <label for="selectedOption">Seleccione una opción:</label>
            @Html.DropDownList("selectedOption", new SelectList(new[] { "Valor", "Cantidad" }))
            <input class=" btn btn-success" type="submit" value="Ir a Vista" />
        </div>
    </div>
}