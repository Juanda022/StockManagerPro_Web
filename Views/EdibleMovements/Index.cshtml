@model IEnumerable<StockManager.Models.EdibleMovements>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center mb-4">Movimientos</h2>


<table class="table table-hover">
    <tr class="text-center bg-dark">
        <th class="text-white">
            MOVIMIENTO
        </th>
        <th class="text-white">
            CANTIDAD
        </th>
        <th class="text-white">
            FECHA Y HORA
        </th>
        <th class="text-white">
            PRODUCTO
        </th>
        <th class="text-white">
            EMPLEADO
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="text-center">
        <td>
            @Html.DisplayFor(modelItem => item.MovementType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Name)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.MovementID })" class="btn btn-outline-secondary">&#9999</a>
            <a href="@Url.Action("Details", new { id = item.MovementID })" class="btn btn-outline-info text-white">&#128269</a>
            <a href="@Url.Action("Delete", new { id = item.MovementID })" class="btn btn-outline-danger">&#10060</a>
        </td>
    </tr>
}

</table>
<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Crear</a>
</p>
