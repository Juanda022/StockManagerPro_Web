@model IEnumerable<StockManager.Models.Sales>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center mb-4">Ventas</h2>


<table class="table table-hover">
    <tr class="text-center bg-dark">
        <th class="text-white">
            FECHA
        </th>
        <th class="text-white">
            TOTAL
        </th>
        <th class="text-white">
            CLIENTE
        </th>
        <th class="text-white">
            EMPLEADO
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="text-center">
        <td>
            @Html.DisplayFor(modelItem => item.SaleDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Name)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.SaleID })" class="btn btn-outline-secondary">&#9999</a>
            <a href="@Url.Action("Details", new { id = item.SaleID })" class="btn btn-outline-info text-white">&#128269</a>
            <a href="@Url.Action("Delete", new { id = item.SaleID })" class="btn btn-outline-danger">&#10060</a>
        </td>
    </tr>
}

</table>
<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Crear</a>
</p>
